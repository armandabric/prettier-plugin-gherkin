  },
  "dependencies": {
    "gherkin": "7.0.4",
    "npm-run-path": "^4.0.0",
    "prettier": "1.19.1",
    "read-json-lines-sync": "^2.0.2"
  },
  "devDependencies": {
    "@types/prettier": "1.18.3",
    "eslint": "6.7.2",
    "eslint-plugin-jest": "23.1.1",
    "jest": "24.9.0",
    "jest-watch-typeahead": "0.4.2"
  }
}
