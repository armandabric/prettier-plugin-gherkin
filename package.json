{
  "name": "prettier-plugin-gherkin",
  "version": "0.0.1",
  "description": "A prettier plugin to format gherkin language (aka `.feature` files)",
  "license": "MIT",
  "main": "src/index.js",
  "files": [
    "/src"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "format:check": "prettier --check \"./**/*.{js,json,md}\"",
